{
    "name": "SALTY Extension",
    "version": "1.0",
    "description": "Limit your time spent on Youtube!",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
                    "storage"],
    "browser_action":{
      "default_popup": "popup.html",
      "default_icon" : "salt.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
}
